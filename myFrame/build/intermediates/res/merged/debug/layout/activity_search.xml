<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_message_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tv_message_cancel"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/iv_message_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/icon_back_pressed"/>

            <View
                android:id="@+id/v_message_divider"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_message_search"
                android:background="@color/grgray"/>

            <ImageView
                android:id="@+id/iv_message_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/v_message_divider"
                android:src="@drawable/icon_back_pressed"/>

            <EditText
                android:id="@+id/et_search_ev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_message_clear"
                android:background="#ffffff"
                android:hint="搜索您要找的内容"
                android:singleLine="true"
                android:textSize="24px"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="取消"
            android:textSize="30px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:src="@drawable/icon_back_normal"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="您可以搜索到各种疾病症状"
            android:textSize="30px"/>

        <ListView
            android:id="@+id/list_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="#c6c9d4"
            android:dividerHeight="1dp"
            android:fadingEdge="none">
        </ListView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/studiospace/MyApplication/myFrame/src/main/res/layout/activity_search.xml -->